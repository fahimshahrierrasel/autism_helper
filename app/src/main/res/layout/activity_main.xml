<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context="com.andromeda.autismhelper.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/app1"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/doughnut" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_margin="5dp"
                android:text="Food"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/app2"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/app1"

        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/beer" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image2"
                android:layout_margin="5dp"
                android:text="Drink"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/app3"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/app2"

        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/shirt" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image3"
                android:layout_margin="5dp"
                android:text="Dress"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/app4"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/app1"

        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/alphabet" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image4"
                android:layout_margin="5dp"
                android:text="Alphabet"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
